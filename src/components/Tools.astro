---
const mytools = [
  'SEO', 'MMM', 'R Studio', 'Python', 'Data Engineering', 'Excel', 'PowerPoint', 'Shopify', 'Photoshop', 'Adobe XD', 'Miro'
]
---

<section class="bg-black py-6 relative z-5">
  <div class="overflow-hidden">
    <div class="tools-marquee flex items-center gap-10 md:gap-30 w-max">
      {mytools.map((item) => (
        <span class="text-white text-2xl whitespace-nowrap">{item}</span>
      ))}
      {mytools.map((item) => (
        <span class="text-white text-2xl whitespace-nowrap">{item}</span>
      ))}
    </div>
  </div>
</section>

<style>
  .tools-marquee {
    animation: tools-marquee 30s linear infinite;
  }
  @keyframes tools-marquee {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }
</style>



