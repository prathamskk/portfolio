---
import svgUnderline from '../assets/underline.svg'

const base = import.meta.env.BASE_URL

const experiences = [
  {
    company: 'Sense Worldwide',
    role: 'Brand Strategy Analyst',
    period: 'Apr 2025 – Aug 2025',
    location: 'London',
    logo: `${base}company/sense-worldwide.jpg`,
    description:
      'Leveraged social listening tools to conduct market research, extract consumer insights, and guide brand positioning using a data-driven approach.',
  },
  {
    company: 'Boston Institute of Analytics',
    role: 'Digital Marketing Intern',
    period: 'Sep 2022 – Feb 2023',
    location: 'Mumbai',
    logo: `${base}company/boston-institute-of-analytics.jpg`,
    description:
      'Executed Meta Ads and implemented automation within email marketing workflows to boost customer acquisition and conversion rates.',
  },
  {
    company: 'Inspirus Education',
    role: 'Freelance WordPress Developer',
    period: 'Apr 2023 – May 2023',
    location: 'Mumbai',
    logo: `${base}company/inspirus-education.jpg`,
    description:
      'Managed end-to-end website design and development,  delivering a responsive and optimized site to enhance organic search rankings and organic traffic.',
  },
  {
    company: 'Entrepreneurship-Cell (SAKEC)',
    role: 'Website Lead & Content Creator',
    period: 'Jun 2022 – Mar 2023',
    location: 'Mumbai',
    logo: `${base}company/ecell-logo.png`,
    description:
      "Launched the organization's website, executed content creation, and utilized data analytics to drive audience engagement.",
  },
]
---

<section class="py-20 space-y-10 px-5" id="experience">
  <div class="max-w-md mx-auto relative">
    <h1 class="text-4xl font-medium text-center">experience.</h1>
    <img src={svgUnderline.src} alt="underline" width="140" class="absolute left-35 -bottom-2" />
  </div>

  <div class="max-w-4xl mx-auto relative">
    <div class="pointer-events-none absolute left-6 top-0 bottom-0 w-[2px] bg-black md:left-8"></div>

    <div class="space-y-8 relative">
      {experiences.map((item) => (
        <div class="border-2 bg-white p-4 md:p-6 flex gap-4 md:gap-6 items-start relative">
          <div class="w-12 h-12 md:w-14 md:h-14 overflow-hidden border-2 bg-black flex items-center justify-center shrink-0">
            <img src={item.logo} alt={`${item.company} logo`} class="w-full h-full object-contain" />
          </div>
          <div class="space-y-2">
            <h2 class="text-xl font-medium">
              {item.company} - {item.role}
            </h2>
            <p class="text-xs uppercase tracking-wide text-gray-500">
              {item.period} · {item.location}
            </p>
            <p class="text-base">
              {item.description}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

