---
import logoStar from '../assets/logo-star.svg'
import { author } from '../sample'

const base = import.meta.env.BASE_URL

const socials = [
  { icon: 'ri-linkedin-box-fill', link: author.linkedin, label: 'LinkedIn' },
  { icon: 'ri-github-fill', link: author.github, label: 'GitHub' },
  { icon: 'ri-mail-fill', link: author.email, label: 'Email' },
]

---

<footer class="border-t-4 px-5 md:px-0 py-10 mt-30">
    <div class="max-w-3xl mx-auto flex justify-center flex-col gap-5 md:gap-0 md:grid md:grid-cols-3 items-center">
      <div class="flex-1 font-bold">
        <a href={base} class="flex items-center gap-3 text-xl">
            <img src={logoStar.src} alt="logo" width="30" /> {author.nickname}
        </a>
      </div>
      <div class="text-center">
        <p>Â© {new Date().getFullYear()} {author.nickname}. All rights reserved.</p>
      </div>
      <div class="flex md:justify-end gap-5">
        {socials.map(item => ( 
          <a href={item.link} target="_blank" rel="noopener noreferrer" class="transition-all duration-200 hover:translate-y-[2px]" aria-label={item.label}><i class={`${item.icon} text-2xl`} aria-hidden="true"></i></a>
        ))}
      </div>
    </div>
   </footer>